+++ fontconfig-2.4.1-newtimes-nohint/conf.d/20-newtimes-nohint.conf	2006-09-28 15:44:41.000000000 +0300
@@ -0,0 +1,18 @@
+<?xml version="1.0"?>
+<!DOCTYPE fontconfig SYSTEM "fonts.dtd">
+<!-- conf.d/sub-pixel.conf -->
+<fontconfig>
+<!-- 
+	Fix the Freetype hinting problem with NewCourier's "#" chars	
+ -->
+
+	<match target="font">
+		<test name="family">
+			<string>NewCourier</string>
+		</test>
+		<edit name="hinting">
+			<bool>false</bool>
+		</edit>
+	</match>
+
+</fontconfig>
