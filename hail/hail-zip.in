#!/bin/sh

# Build zipfiles for hail on Win32. Separate runtime and developer
# ones. Run after make install.

ZIP=/tmp/hail-@VERSION@.zip
DEVZIP=/tmp/hail-dev-@VERSION@.zip

cd @prefix@
rm $ZIP

zip $ZIP -@ <<EOF
bin/libhailutil-@LT_CURRENT_MINUS_AGE@.dll
lib/gtk-2.0/modules/libhail.dll
EOF

zip $ZIP lib/locale/*/LC_MESSAGES/hail.mo

rm $DEVZIP
zip -r $DEVZIP -@ <<EOF
lib/libhailutil.dll.a
lib/pkgconfig/hail.pc
include/hail-1.0
share/gtk-doc/html/hail-libail-util
EOF
