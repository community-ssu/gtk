			border = { 0, 0, 0, 0 }
			stretch = TRUE
		}
		image {
			function = BOX
			file = "../images/qgn_plat_listbox_arrow_down_disabled.png"
			state = INSENSITIVE
			border = { 0, 0, 0, 0 }
			stretch = TRUE
		}
		image {
			function = BOX
			file = "../images/qgn_plat_listbox_arrow_down_pressed.png"
			state = ACTIVE
