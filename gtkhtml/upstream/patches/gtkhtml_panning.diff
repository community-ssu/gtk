diff -Nru gtkhtml-3.9.1/src/gtkhtml.c gtkhtml-3.9.1-fixed/src/gtkhtml.c
--- gtkhtml-3.9.1/src/gtkhtml.c	2006-01-02 12:04:04.000000000 +0200
