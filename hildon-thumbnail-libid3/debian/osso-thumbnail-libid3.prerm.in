#! /bin/sh
# prerm script for pango
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <prerm> `remove'
#        * <old-prerm> `upgrade' <new-version>
#        * <new-prerm> `failed-upgrade' <old-version>
#        * <conflictor's-prerm> `remove' `in-favour' <package> <new-version>
#        * <deconfigured's-prerm> `deconfigure' `in-favour'
#          <package-being-installed> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

#APP="osso-thumb-libid3"

GCONFTOOL="gconftool-2"

case "$1" in
    #remove)
    #	;;
    #upgrade)
    #	;;
    #deconfigure)
    #	;;
    
    deconfigure|upgrade|remove)
	export GCONF_SCHEMA_CONFIG_SOURCE="@GCONF_SCHEMA_CONFIG_SOURCE@"

	export GCONF_CONFIG_SOURCE=${GCONF_SCHEMA_CONFIG_SOURCE}

	$GCONFTOOL --direct --config-source "$GCONF_CONFIG_SOURCE" --recursive-unset "/apps/osso/osso/thumbnailers/audio@mp3"
	$GCONFTOOL --direct --config-source "$GCONF_CONFIG_SOURCE" --recursive-unset "/apps/osso/osso/thumbnailers/audio@x-mp3"
	$GCONFTOOL --direct --config-source "$GCONF_CONFIG_SOURCE" --recursive-unset "/apps/osso/osso/thumbnailers/audio@x-m4a"
	$GCONFTOOL --direct --config-source "$GCONF_CONFIG_SOURCE" --recursive-unset "/apps/osso/osso/thumbnailers/audio@x-mp2"

	#if osso-thumber-register -u $APP ; then
	#    SUCCESS=1
	#else
	#    echo "Warning: Thumbnailer unregistering failed"
	#    # Unregistering failing is not critical, library can handle stale paths, proceed?
	#    #exit 1
	#fi
        ;;
    failed-upgrade)
        ;;
    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
