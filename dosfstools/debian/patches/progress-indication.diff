diff -ur ../dosfstools/mkdosfs/mkdosfs.c mkdosfs/mkdosfs.c
--- ../dosfstools/mkdosfs/mkdosfs.c	2005-04-11 12:51:07.826551072 +0300
+++ mkdosfs/mkdosfs.c	2005-04-11 13:50:40.510420568 +0300
@@ -1314,12 +1314,22 @@
 	       CF_LE_L(bs.fat32.fat32_length) : CF_LE_W(bs.fat_length);
 
   seekto( 0, "start of device" );
+  {
+    /* tell the number of printed hash marks */
+    char buf[20];
+    snprintf(buf, 19, "%d\n", reserved_sectors + nr_fats + 3); 
+    buf[19] = '\0';
+    write(STDERR_FILENO, buf, strlen(buf));
+  }
   /* clear all reserved sectors */
-  for( x = 0; x < reserved_sectors; ++x )
+  for( x = 0; x < reserved_sectors; ++x ) {
     writebuf( blank_sector, sector_size, "reserved sector" );
+    write(STDERR_FILENO, "#", 1);
+  }
   /* seek back to sector 0 and write the boot sector */
   seekto( 0, "boot sector" );
   writebuf( (char *) &bs, sizeof (struct msdos_boot_sector), "boot sector" );
