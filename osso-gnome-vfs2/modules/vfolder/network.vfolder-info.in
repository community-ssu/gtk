<VFolderInfo>
  <!-- Merge dirs optional -->
  <WriteDir>~/.gnome2/vfolders/network/</WriteDir>

  <!-- Root folder -->
  <Folder>
    <Parent>@datadir@/gnome/network/</Parent>
    <Name>Network Shares</Name>
    <Query>
      <Not>
        <Keyword>Merged</Keyword>
      </Not>
    </Query>

  </Folder>

</VFolderInfo>
