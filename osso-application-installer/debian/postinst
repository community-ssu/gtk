#!/bin/sh -e

set -e

add_sudoer ()
{
    line="$1"
    if ! grep -F -q "$line" /etc/sudoers; then
	echo "+$line"
	echo "$line" >>/etc/sudoers
    fi
}

## Add line to sudo so that "user" can run "apt-worker" as
## "root".
##
## KEEP THIS IN SYNC WITH prerm

add_sudoer 'user ALL = NOPASSWD: /usr/libexec/apt-worker'

if [ -x /usr/bin/update-desktop-database ]; then
 update-desktop-database /usr/share/applications
fi

utilsdir=/etc/others-menu/1400_tana_fi_utilities
entry=0500_osso_application_installer.desktop

rm -f $utilsdir/$entry
ln -s /usr/share/applications/hildon/osso-application-installer.desktop \
      $utilsdir/$entry

#DEBHELPER#

exit 0
