#!/usr/bin/make -f

PYVER=2.4
PYTHON=python$(PYVER)
p_base=$(PYTHON)-bluez
p_dev =$(p_base)-dev

d_base=debian/$(p_base)
d_dev=debian/$(p_dev)

ifeq ($(DEB_BUILD_ARCH),armel)
        CFLAGS=-Os -mthumb -mfloat-abi=softfp -Wall -Wstrict-prototypes
else
        CFLAGS=-Os -Wall -Wstrict-prototypes
endif

build: build-stamp 
build-stamp:
	dh_testdir 
	CFLAGS="$(CFLAGS)" $(PYTHON) setup.py build
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	-rm -f build-stamp
	-rm -rf build
	-rm -f doc/{,_}bluetooth.html
	-rm -rf $(d_base) $(d_dev)
	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_installdirs

	$(PYTHON) setup.py install --root=$(d_base) --no-compile
	$(PYTHON) -OO -m compileall -f $(d_base)
	(cd doc && ./gendoc)
	cp -a $(d_base)/usr $(d_dev)

	# base
	find $(d_base) -name "*.py" | xargs rm -f 

	# dev
	find $(d_dev)/usr/lib/$(PYTHON) -not -name "*.py" -type f | xargs rm -f 
	dh_installexamples -p$(p_dev) examples/*
	
	# cleanup
	find $(d_base) $(d_dev) -name ".svn" | xargs rm -rf

binary: binary-indep binary-arch
binary-indep: install
	dh_testdir
	dh_testroot
	dh_installdirs
	dh_installchangelogs -p$(p_dev)
	dh_installdocs -p$(p_dev) doc/*.html
	dh_installman -p$(p_dev)
	dh_compress -p$(p_dev) -X.py -Xexamples
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb
	
binary-arch: install
	dh_testdir
	dh_testroot
	dh_installdirs
	dh_strip
	dh_fixperms
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

.PHONY: build clean install binary-indep binary-arch binary
